<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sevanth">

    <androidx.cardview.widget.CardView
        android:layout_width="60sp"
        android:layout_height="60sp"
        app:cardCornerRadius="30sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img2" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="300sp"
        android:layout_height="250sp"
        android:layout_margin="140sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="30sp">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/MaterialAlertDialog.Material3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60sp"
            android:hint="">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="#E1E3EF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MaterialAlertDialog.Material3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60sp"
            android:layout_marginRight="45sp"
            android:hint="">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="#E1E3EF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MaterialAlertDialog.Material3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60sp"
            android:layout_marginRight="89sp"
            android:gravity=""
            android:hint="">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="#E1E3EF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MaterialAlertDialog.Material3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60sp"
            android:layout_marginLeft="45sp"
            android:hint="">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="#E1E3EF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/MaterialAlertDialog.Material3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginBottom="60sp"
            android:layout_marginLeft="89sp"
            android:hint="">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="#E1E3EF"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130sp"
            android:text="Submit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="210sp"
            android:gravity="center_horizontal"
            android:text="Not received Code ?"
            android:textStyle="bold" />

        <TextView
            android:layout_width="40sp"
            android:layout_height="20sp"
            android:layout_marginLeft="225sp"
            android:layout_marginTop="210sp"
            android:background="#03A9F4"
            android:gravity="center_horizontal"
            android:text="Reset"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


</LinearLayout>